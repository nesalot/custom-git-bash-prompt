# ---------------------------------------------------------
# Make Terminal Mo Betta
# ---------------------------------------------------------
export TERM=xterm-256color
export CLICOLOR=1
export CLICOLOR_FORCE=1
export LS_COLORS='di=1;34:ln=1;36:so=1;35:pi=1;33:ex=1;32:bd=1;33;41:cd=1;33;41:su=1;41:sg=1;43:tw=1;42:ow=1;43'

# ---------------------------------------------------------
# terminal Commands
# ---------------------------------------------------------
alias ls='ls --color=auto'
alias ll='ls -lah --color=auto'
alias c='clear'

alias php="php.bat"
alias herd="herd.bat"
alias laravel="laravel.bat"
alias composer="composer.bat"

# ---------------------------------------------------------
# Quick directory navigation
# ---------------------------------------------------------
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias home='cd $HOME'
alias desktop='cd $HOME/Desktop'
alias dev='cd $HOME/Dev'
alias herd='cd $HOME/Herd'
alias bashrc='code $HOME/.bashrc'
alias aliases='code $HOME/.windows_aliases'

alias winsleep='cd $HOME/../../Windows/system32 & rundll32.exe powrprof.dll,SetSuspendState 0,1,0'

# ---------------------------------------------------------
# Artisan Commands
# ---------------------------------------------------------
alias pa='php artisan'
alias pam='php artisan migrate'
alias pam:r='php artisan migrate:refresh'
alias pam:rs='php artisan migrate:refresh --seed'
alias serve='php artisan serve'
alias pat='php artisan tinker'

# ---------------------------------------------------------
# Git Commands
# ---------------------------------------------------------
alias g='git'
alias ga='git add'
alias gc='git commit'
alias gcm='git commit -m'
alias gs='git status'
alias gpull='git pull'
alias gpush='git push'
alias gd='git diff'

